<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:padding="16dp">

    <TextView
        android:id="@+id/widget_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIVEL 1"
        android:textColor="#FFC107"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/widget_xp_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_level"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="50"
        android:progressTint="#FFC107" />

    <TextView
        android:id="@+id/widget_top_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_xp_bar"
        android:layout_marginTop="12dp"
        android:text="Tu Mejor VersiÃ³n"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/widget_open_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Open App"
        android:tint="#FFC107" />

</RelativeLayout>
